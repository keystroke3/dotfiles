configuration {
  /* combi-modi: "drun"; */
    drun-display-format: "{name}";
      font: "Iosevka Medium 13";
        modi: "drun";
          show-icons: true;
          }

          window {
            background-color: rgba(32, 23, 50, 90%);
              location: north;
                width: 2560;
                }

                mainbox {
                  background-color: rgba(0, 0, 0, 0%);
                    /* children: [ listview, entry ]; */
                      children: [ listview ];
                        padding: 0 0 90 0;
                        }

                        listview {
                          /* background-color: #201732; */
                            /* background-color: rgba(0, 0, 0, 50%); */
                              background-color: rgba(255, 255, 255, 0%);
                                columns: 7;
                                  layout: vertical;
                                    lines: 4;
                                      padding: 70;
                                        spacing: 70;
                                        }

                                        element {
                                          /* background-color: #201732; */
                                            background-color: rgba(0, 0, 0, 0%);
                                              border-radius: 4;
                                                orientation: vertical;
                                                  padding: 36 0;
                                                    text-color: #fff;
                                                    }

                                                    element selected {
                                                      /* background-color: #f92672; */
                                                        /* background-color: rgba(249, 38, 114, 50%); */
                                                          background-color: rgba(62, 54, 77, 90%);
                                                            /* text-color: #201732; */
                                                              text-color: #f92672; 
                                                                /* text-color: #ae81ff; */
                                                                }

                                                                element-icon {
                                                                  size: 64;
                                                                  }

                                                                  element-text {
                                                                    horizontal-align: 0.5;
                                                                      padding: 10 0 0 0;
                                                                        text-color: inherit;
                                                                        }