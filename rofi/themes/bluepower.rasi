configuration {
    modi: "combi,windowcd,run";
    font: "FontAwesome 35";
    bw: 0;
    location: 0;
    padding: 0;
    fixed-num-lines: true;
    show-icons: false;
    sidebar-mode: false;
    combi-modi: "window,run";
    separator-style: "none";
    hide-scrollbar: true;
    fullscreen: false;
    fake-transparency: false;
    scroll-method: 1;
    window-format: "[{w}] 路路 {c} 路路   {t}";
    click-to-exit: true;
    show-match: false;
    color-normal: "@xbg, @xfg, @xbg, @xfg, @xbg";
    color-urgent: "@xbg, @x1, @xbg, @x1, @xfg";
    color-active: "@xbg, @xfg, @xbg, @xfg, @xbg";
    color-window: "@xbg, @x1, @xfg";
    me-accept-entry: "MousePrimary";
    me-accept-custom: "MouseMiddle";
}
window {
    background-color: @xbg;
    border: 2;
    border-color: @x14;
    border-radius: 12px;
    padding: 0;
    width: 55%;
    height: 30%;
    position: center;
}
mainbox {
    border: 0;
    border-color: @x0;
    padding: 50 45 0 45;
}
listview {
    fixed-height: 0;
    border: 0px;
    border-color: @x6;
    spacing: 30px;
    scrollbar: false;
    layout: horizontal;
}
element {
    border: 0;
    padding: 60px;
}
element normal.normal {
    background-color: rgba (0,0,0,0%);
    text-color:       @xfg;
}
element selected.normal {
    background-color: rgba (229,192,123,100%);
    text-color:       @x0;
    border-radius:    2% 1% 2% 1%;
}
element alternate.normal {
    background-color: rgba (0,0,0,0%);
    text-color:       @xfg;
}
inputbar {
    spacing:    0px ;
    text-color: @xfg;
    padding:    1px ;
    children:   [];
}

@import "colors.rasi"

