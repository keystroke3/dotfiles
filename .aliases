#!/bin/sh

#custom functions

# Allows killing of processes using fzf
fkill() {
    local pid 
    if [ "$UID" != "0" ]; then
        pid=$(ps -f -u $UID | sed 1d | fzf -m | awk '{print $2}')
    else
        pid=$(ps -ef | sed 1d | fzf -m | awk '{print $2}')
    fi  

    if [ "x$pid" != "x" ]
    then
        echo $pid | xargs kill -${1:-9}
    fi  
}

o(){
    fuzz=$(fzf --reverse --height 40%)
    if [ -z $fuzz ]
    then 
        return 0
    elif [ -f $fuzz ]
    then
        filetype=`xdg-mime query filetype $fuzz | awk -F/ '{print $1}'`
        case $filetype in
            text )
                vim $fuzz ;;
            audio )
                mpv $fuzz & disown ;;
            application )
                vim $fuzz ;;
            * )
                xdg-open $fuzz & disown 
        esac
    fi
}
zle -N open
bindkey '^o' open

ol(){
    fuzz=`fd -Ht f . $(pwd) | fzf --reverse --height 40%`
    if [ -z $fuzz ]
    then 
        return 0
    elif [ -f $fuzz ]
    then
        filetype=`xdg-mime query filetype $fuzz | awk -F/ '{print $1}'`
        case $filetype in
            text )
                vim $fuzz ;;
            audio )
                mpv $fuzz & disown ;;
            application )
                vim $fuzz ;;
            * )
                xdg-open $fuzz & disown 
        esac
    fi
}


# Jump to directory. Much faster than regular cd
j(){
    fuzz=`fd -Ht d . $HOME | fzf --reverse --height 40%`
    if [ -z $fuzz ]
    then 
        return 0
    elif [ -d $fuzz ]
    then
        if [ "$1" != "mpv" ]
        then
            cd $fuzz
        else
            mpv $fuzz & disown
        fi
    fi
}

jl(){
    fuzz=`fd -Ht d . $(pwd) | fzf --reverse --height 40%`
    if [ -z $fuzz ]
    then 
        return 0
    elif [ -d $fuzz ]
    then
        if [ "$1" != "mpv" ]
        then
            cd $fuzz
        else
            mpv $fuzz & disown
        fi
    fi
}

