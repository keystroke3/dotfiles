{
    "position": "top",
    "layer": "top",
    "height": 16,
    "margin-top": 0,
    "margin-bottom": 0,
    "margin-left": 0,
    "margin-right": 0,
    "modules-left": [
        "custom/launcher",
        "hyprland/workspaces",
        "mpris",
    ],
    //"modules-center": [],
    "modules-right": [
        "network",
        "custom/vpnstatus",
        "cpu",
        "memory",
        "custom/gpuinfo",
        "pulseaudio",
        "tray",
        "clock"
    ],
    // Modules configuration
    "clock": {
        "format": "{:%H:%M}",
        "tooltip": "true",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%a %d/%m}"
    },
    "hyprland/workspaces": {
        "active-only": false,
        "all-outputs": true,
        "disable-scroll": true,
        "on-scroll-up": "hyprctl dispatch workspace -1",
        "on-scroll-down": "hyprctl dispatch workspace +1",
        "format": "{icon}",
        "on-click": "activate",
        "persistent-workspaces": {
            "*": [
                1,
                2,
                3,
                4,
                5,
                6,
                7,
                8,
                9
            ] // workspaces 2 and 3 shown on DP-1
        },
        "format-icons": {
            //			"1": "‰∏Ä",
            //			"2": "‰∫å",
            //			"3": "‰∏â",
            //			"4": "Âõõ",
            //			"5": "‰∫î",
            "urgent": "ÔÅ™",
            "active": "ÔÜí",
            "default": "ÔÑë",
            "empty": "Û∞ßû",
            "special": "Û∞ìè",
            "sort-by-number": true
        }
    },
    "mpris": {
        "format-playing": "{player_icon} {artist} - {title}",
        "format-paused": "{status_icon} {artist} - {title}",
        "player-icons": {
            "default": "‚ñ∂",
            "mpv": "Û∞ïß",
            "chromium": "<span>Û∞óÉ </span>",
            "tauon": "<span>üéµ</span>",
            "spotify": "<span>Û∞ìá </span>"
        },
        "status-icons": {
            "paused": "‚è∏"
        },
        "max-length": 40,
        "on-click-middle": "playerctl play-pause",
        "on-click": "playerctl previous",
        "on-click-right": "playerctl next",
        "on-scroll-up": "playerctld shift",
        "on-scroll-down": "playerctld unshift",
        "scroll-step": 0.4,
        // "ignored-players": [
        //     "firefox"
        // ]
    },
    "custom/playerctl": {
        "format": "{icon}",
        "return-type": "json",
        "max-length": 64,
        "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
        "on-click-middle": "playerctl play-pause",
        "on-click": "playerctl previous",
        "on-click-right": "playerctl next",
        "format-icons": {
            "Playing": "<span foreground='#E5B9C6'>Û∞êå</span>",
            "Paused": "<span foreground='#928374'>Û∞è•</span>"
        },
    },
    "custom/playerlabel": {
        "format": "<span>{}</span>",
        "return-type": "json",
        "max-length": 48,
        "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
        "on-click-middle": "playerctl play-pause",
        "on-click": "playerctl previous",
        "on-click-right": "playerctl next",
        "format-icons": {
            "Playing": "<span foreground='#E5B9C6'>Û∞íÆ Û∞êå Û∞í≠</span>",
            "Paused": "<span foreground='#928374'>Û∞íÆ Û∞è• Û∞í≠</span>"
        },
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}  {capacity}%",
        "format-charging": "{capacity}% Ôóß",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{icon} {time}",
