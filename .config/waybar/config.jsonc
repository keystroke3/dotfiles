        // "format-full": "",
        "format-icons": [
            "ÔâÑ",
            "ÔâÉ",
            "ÔâÇ",
            "ÔâÅ",
            "ÔâÄ"
        ]
    },
    "memory": {
        "format": "ÓøÖ  {}%",
        "format-alt": "ÓøÖ {used}/{total} GiB",
        "interval": 5
    },
    "cpu": {
        "format": " Û∞çõ {usage}%",
        "format-alt": "Û∞çõ {avg_frequency} GHz",
        "interval": 5
    },
    "disk": {
        "format": "Û∞ãä {}%",
