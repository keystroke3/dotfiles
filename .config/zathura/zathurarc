
set window-title-basename "true"
set selection-clipboard "clipboard"

# Dracula color theme for Zathura
# Swaps Foreground for Background to get a light version if the user prefers

#
# Dracula color theme
#

set notification-error-bg       "#1E1C31" # Foreground
set notification-error-fg       "#E06C75" # Red
set notification-warning-bg     "#1E1C31" # Selection
set notification-warning-fg     "#E5C07B" # Orange
set notification-bg             "#1E1C31" # Background
set notification-fg             "#f8f8f2" # Foreground

set completion-bg               "#1E1C31" # Background
set completion-fg               "#61AFEF" # Comment
set completion-group-bg         "#1E1C31" # Background
set completion-group-fg         "#61AFEF" # Comment
set completion-highlight-bg     "#3E4C71" # Selection
set completion-highlight-fg     "#98C379" # Foreground

set index-bg                    "#1E1C31" # Background
set index-fg                    "#f8f8f2" # Foreground
set index-active-bg             "#44475a" # Current Line
set index-active-fg             "#f8f8f2" # Foreground

set inputbar-bg                 "#1E1C31" # Background
set inputbar-fg                 "#98C379" # Foreground
set statusbar-bg                "#1E1C31" # Background
set statusbar-fg                "#f8f8f2" # Foreground

set highlight-color             "#ffb86c" # Orange
set highlight-active-color      "#ff79c6" # Pink

set default-bg                  "#1E1C31" # Background
set default-fg                  "#f8f8f2" # Foreground

set render-loading              true
set render-loading-fg           "#1E1C31" # Background
set render-loading-bg           "#f8f8f2" # Foreground

#
# Recolor mode settings
#

set recolor-lightcolor          "#1E1C31" # Background
set recolor-darkcolor           "#f8f8f2" # Foreground

#
# Startup options
#
set adjust-open width
set recolor false
